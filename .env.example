# ===================
# Application Settings
# ===================
APP_NAME=mamabloemetjes
APP_ENV=development
APP_PORT=:8082
LOG_LEVEL=debug

# ===================
# Server Settings
# ===================
SERVER_READ_TIME_OUT=15s
SERVER_WRITE_TIME_OUT=15s
SERVER_IDLE_TIME_OUT=60s
SERVER_MAX_HEADER_BYTES=1048576

# ===================
# Cors Settings
# ===================
CORS_ALLOW_ORIGINS="*"
CORS_ALLOW_METHODS="GET, POST, PUT, DELETE, OPTIONS"
CORS_ALLOW_HEADERS="Origin, Content-Type, Accept, Authorization, X-CSRF-Token"
CORS_ALLOW_CREDENTIALS=true
CORS_EXPOSED_HEADERS="Content-Length, Authorization"
CORS_MAX_AGE=600

# ===================
# Database Settings
# ===================
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_MAX_CONNS=10
DB_MIN_CONNS=2
DB_MAX_LIFETIME=30m
DB_MAX_IDLE_TIME=10m
DB_READ_TIMEOUT=5s
DB_WRITE_TIMEOUT=5s

# ===================
# Auth Settings
# ===================
AUTH_ACCESS_TOKEN_SECRET=
AUTH_ACCESS_TOKEN_EXPIRY=15m
AUTH_REFRESH_TOKEN_SECRET=
AUTH_REFRESH_TOKEN_EXPIRY=168h
AUTH_CACHE_USER_TTL=30m
AUTH_BLACKLIST_CACHE_TTL=168h

# ===================
# Cache Settings (Redis)
# ===================
CACHE_ADDRESS=localhost:6379
CACHE_USERNAME=
CACHE_PASSWORD=
CACHE_DB=0

# Connection Pool
CACHE_POOL_SIZE=10
CACHE_MIN_IDLE_CONNS=2
CACHE_MAX_IDLE_CONNS=5
CACHE_POOL_TIMEOUT=30s
CACHE_IDLE_TIMEOUT=5m

# Timeouts
CACHE_DIAL_TIMEOUT=5s
CACHE_READ_TIMEOUT=3s
CACHE_WRITE_TIMEOUT=3s

# Retry Logic
CACHE_MAX_RETRIES=3
CACHE_MIN_RETRY_BACKOFF=8ms
CACHE_MAX_RETRY_BACKOFF=512ms

# Product Caching TTLs
CACHE_PRODUCT_LIST_TTL=5m
CACHE_PRODUCT_COUNT_TTL=10m

# ===================
# Rate Limiting Settings
# ===================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GENERAL_LIMIT=100
RATE_LIMIT_GENERAL_WINDOW=1m
RATE_LIMIT_AUTH_LIMIT=15
RATE_LIMIT_AUTH_WINDOW=15m
RATE_LIMIT_EXPENSIVE_LIMIT=60
RATE_LIMIT_EXPENSIVE_WINDOW=2m
RATE_LIMIT_ADMIN_LIMIT=50
RATE_LIMIT_ADMIN_WINDOW=1m

# ===================
# Email Settings
# ===================
EMAIL_API_KEY=
EMAIl_ADDRESS=""
EMAIL_VERIFICATION_TOKEN_EXPIRY=15m

# ===================
# ENCRYPTION
# ===================
ENCRYPTION_KEY=
